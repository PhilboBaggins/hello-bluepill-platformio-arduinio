{
    //
    // These tasks run common PLatformIO commmand. They won't be necessary if
    // you've installed the PlatformIO IDE extension in your copy of VS Code
    // but I added them for anyone that isn't running that extension.
    //

    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": [
                "platformio",
                "run"
            ],
            "problemMatcher": []
        },
        {
            "label": "Program MCU",
            "type": "shell",
            "command": [
                "platformio",
                "run",
                "--target=upload"
            ],
            "problemMatcher": []
        }
    ]
}
